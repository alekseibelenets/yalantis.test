<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
</head>
<body>
    <form class="container" enctype="multipart/form-data" method="post" action="/">
        <h1> Post form with "yalantis" </h1>
        <div class="col-sm">
            <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-lg">First Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" placeholder="First Name" aria-label="First Name" name="FirstName">
            </div>
        </div>
        <div class="col-sm">
            <label for="colFormLabel" class="col-sm-2 col-form-label-lg">Last Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" placeholder="Last Name" aria-label="Last Name" name="LastName">
            </div>
        </div>
        <div class="col-sm">
            <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg">Email</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" placeholder="Email" aria-label="Email" name="email">
            </div>
        </div>
        <div class="col-sm">
            <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg">Photo</label>
            <div class="col-sm-10">
                <input type="file" class="form-control"  name="file">
            </div>
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div></button>
    </form>

    <table class="table">
        <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email</th>
            <th scope="col">Photo</th>
        </tr>
        </thead>
        <tbody>
        <% notesList.forEach(note => { %>
            <tr>
                <th scope="row"><%= note._id%></th>
                <td><%= note.FirstName%></td>
                <td><%= note.LastName%></td>
                <td><%= note.email%></td>
                <% if(note.image) {%>
                <td><img src"./uploads/<%= note.image%>" alt="profile image" text-align: center height: 200 width: 200></td>
                <% } %>
            </tr>
        <% }) %>
        </tbody>
    </table>
</body>
</html>